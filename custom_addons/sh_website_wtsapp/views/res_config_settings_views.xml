<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_inherit_res_config_settings_view_form_for_whatsapp_chat_and_share" model="ir.ui.view">
        <field name="name">sh.inherit.res.config.settings.view.form.for.whatapp.chat.and.share</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <!-- <xpath expr="//div[@id='website_settings']" position="after"> -->
            <block id="website_info_settings" position="after">
            <block title="WhatsApp Live Chat" id="whatsApp_live_chat_in_page">
                <!-- <h2>WhatsApp Live Chat</h2> -->
                <div class="row mt16 o_settings_container" id="sh_whatsapp_chat_settings">
                    <div class="col-12 col-md-6 o_setting_box">
                        <group name="sh_model_whatsapp_chat_group">
                            <field name="sww_is_wtsapp" />
                            <field name="sww_type" invisible="sww_is_wtsapp == False" required="sww_is_wtsapp == True"  />
                            <field name="sww_style" invisible="sww_is_wtsapp == False" required="sww_is_wtsapp == True" />
                            <field name="sww_position" invisible="sww_is_wtsapp == False" required="sww_is_wtsapp == True" />
                            <field
                                name="sww_cn"
                                help="Omit any zeroes, brackets or dashes when adding the phone number in international format."
                                invisible="sww_is_wtsapp == False or sww_type == 'chat'"  required="sww_is_wtsapp == True or sww_type == 'contact'"
                               
                            />
                            <field name="sww_chat"  invisible="sww_is_wtsapp == False or sww_type == 'contact'"  required="sww_is_wtsapp == True or sww_type == 'chat'"
                            />
                            <field name="sww_message" invisible="sww_is_wtsapp == False" required="sww_is_wtsapp == True" />
                            <field name="sww_link_btn_title" invisible="sww_is_wtsapp == False" />
                            <field
                                name="sww_banner_img"
                                widget="image"
                                class="oe_avatar"
                                options="{'preview_image': 'image_medium', 'size': [90, 90]}"
                                invisible="sww_is_wtsapp == False or sww_style != 'fball'"  required="sww_is_wtsapp == True or sww_style == 'fball'"
                            />
                            <field name="sww_color" widget="color" invisible="sww_is_wtsapp == False or sww_style != 'fbutton'"  required="sww_is_wtsapp == True or sww_style == 'fbutton'"
                             />
                            <field name="sww_text_color" widget="color" invisible="sww_is_wtsapp == False or sww_style != 'fbutton'"  required="sww_is_wtsapp == True or sww_style == 'fbutton'"/>
                        </group>
                    </div>
                </div>
            </block>
            </block>
            <!-- </xpath> -->
        </field>
    </record>
</odoo>
