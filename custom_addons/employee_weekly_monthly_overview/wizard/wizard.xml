<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_weekly_monthly_overview.employee_weekly_monthly_overview_wizards_view_form" model="ir.ui.view">
        <field name="name">employee_weekly_monthly_overview employee_weekly_monthly_overview_wizards_view_form</field>
        <field name="model">employee.weekly.monthly.overview.wizard</field>
        <field name="arch" type="xml">
            <form string="Saldo Rapport">
                <group>
                    <group>
                        <field name="employee_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                        <field name="select_all_sub_employees"/>
                    </group>
                    <group>
                        <field name="overview_type" />
                        <field name="month" attrs="{'invisible': [('overview_type', '!=', 'monthly')]}"/>
                        <field name="year" />
                    </group>
                </group>
                <footer>
                    <button name="process_report" string="Print PDF" type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="employee_weekly_monthly_overview.employee_weekly_monthly_overview_wizard_action" model="ir.actions.act_window">
        <field name="name">Saldo Rapport</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.weekly.monthly.overview.wizard</field>
        <field name="view_id" ref="employee_weekly_monthly_overview.employee_weekly_monthly_overview_wizards_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            name="Saldo Rapport"
            id="employee_weekly_monthly_overview_wizards_menu"
            parent="hr_attendance.menu_hr_attendance_root"
            action="employee_weekly_monthly_overview.employee_weekly_monthly_overview_wizard_action"
            sequence="200"
    />

</odoo>
