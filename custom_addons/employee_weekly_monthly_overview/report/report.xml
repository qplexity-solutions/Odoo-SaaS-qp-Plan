<odoo>
    <record id="paperformat_employee_weekly_monthly_overview" model="report.paperformat">
        <field name="name">employee_weekly_monthly_overview</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>
    <record id="action_report_employee_weekly_monthly_overview" model="ir.actions.report">
        <field name="name">Saldo Rapport</field>
        <field name="model">employee.weekly.monthly.overview.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">employee_weekly_monthly_overview.information_report</field>
        <field name="report_file">employee_weekly_monthly_overview.information_report</field>
        <field name="binding_model_id" ref="model_employee_weekly_monthly_overview_wizard"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="employee_weekly_monthly_overview.paperformat_employee_weekly_monthly_overview"/>
    </record>
    <template id="employee_weekly_monthly_overview_header">
        <div class="header">
            <div class="o_clean_header">
                <div class="row" style="font-family:'Roboto',sans-serif">
                    <div class="col-4">
                        <img t-if="o.env.company.logo" t-att-src="image_data_uri(o.env.company.logo)" alt="Logo"
                        />
                    </div>
                    <div class="col-4"/>
                    <div class="col-4" name="company_address" style="font-size:10px; text-align:right;">
                        <ul class="list-unstyled">
                            <strong>
                                <li t-if="o.env.company.name">
                                    <span t-field="o.env.company.name"/>
                                </li>
                            </strong>
                            <li t-if="o.env.company.street">
                                <span t-field="o.env.company.street"/>
                            </li>
                            <li t-if="o.env.company.street2">
                                <span t-field="o.env.company.street2"/>
                                <span t-field="o.env.company.city"/>
                            </li>
                            <li t-if="o.env.company.country_id">
                                <span t-field="o.env.company.country_id.name"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <template id="employee_weekly_monthly_overview_footer">
        <div class="footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <div t-field="o.env.company.report_footer"/>
                </ul>
            </div>
        </div>
    </template>
    <template id="information_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <!--                <t t-call="employee_weekly_monthly_overview.employee_weekly_monthly_overview_header"/>-->
                <!--                <t t-call="employee_weekly_monthly_overview.employee_weekly_monthly_overview_footer"/>-->
                <t t-call="web.basic_layout">
                    <t t-foreach="records" t-as="employee">
                        <div class="page">
                            <!-- Header -->
                            <div class="row" style="font-family:'Roboto',sans-serif">
                                <div class="col-4">
                                    <img t-if="o.env.company.logo" t-att-src="image_data_uri(o.env.company.logo)" alt="Logo"

                                    />
                                </div>
                                <div class="col-4"/>
                                <div class="col-4" name="company_address" style="font-size:10px; text-align:right;">
                                    <ul class="list-unstyled">
                                        <strong>
                                            <li t-if="o.env.company.name">
                                                <span t-field="o.env.company.name"/>
                                            </li>
                                        </strong>
                                        <li t-if="o.env.company.street">
                                            <span t-field="o.env.company.street"/>
                                        </li>
                                        <li t-if="o.env.company.street2">
                                            <span t-field="o.env.company.street2"/>
                                            <span t-field="o.env.company.city"/>
                                        </li>
                                        <li t-if="o.env.company.country_id">
                                            <span t-field="o.env.company.country_id.name"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- Header Ends Here -->
                            <br/>
                            <div class="row">
                                <div class="col-3"/>
                                <div class="col-6" style="text-align: center;">
                                    <h4>Employee
                                        <span t-esc="overview_type" style="text-transform: capitalize;"/>
                                        Overview
                                    </h4>
                                </div>
                                <div class="col-3"/>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="row">
                                                <div class="col-2"/>
                                                <div class="col-10">
                                                    <p>
                                                        <span>Employee Name :</span>
                                                        <strong>
                                                            <span t-esc="employee['employee'].sudo().name"/>
                                                        </strong>
                                                        <br/>
                                                        <span>Badge ID :</span>
                                                        <strong>
                                                            <span t-esc="employee['employee'].sudo().barcode"/>
                                                        </strong>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6" style="text-align: right;">
                                            <div class="row">
                                                <div class="col-10">
                                                    <p>
                                                        <span>Type :</span>
                                                        <strong>
                                                            <span t-esc="overview_type" style="text-transform: capitalize;"/>
                                                        </strong>
                                                        <br/>
                                                        <t t-if="overview_type == 'monthly'">
                                                            <span>Month :</span>
                                                            <strong>
                                                                <span t-esc="month"/>
                                                                -
                                                                <span t-esc="year"/>
                                                            </strong>
                                                        </t>
                                                        <t t-else="">
                                                            <span>Year :</span>
                                                            <strong>
                                                                <span t-esc="year"/>
                                                            </strong>
                                                        </t>
                                                    </p>
                                                </div>
                                                <div class="col-2"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <!-- CONTENT -->
                            <div class="row">
                                <div class="col-1"/>
                                <div class="col-10">
                                    <table class="table table-condensed">
                                        <thead>
                                            <tr>
                                                <th class="text-center">
                                                    <t t-if="overview_type == 'monthly'">
                                                        <span>Date</span>
                                                    </t>
                                                    <t t-else="">
                                                        <span>Week</span>
                                                    </t>
                                                </th>
                                                <th class="text-center">
                                                    Hours
                                                </th>
                                                <th class="text-center">
                                                    Overtime
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="employee['hours_details']" t-as="line">
                                                <t t-if="line['name'] != 'Total'">
                                                    <tr>
                                                        <td>
                                                            <span t-esc="line['name']"/>
                                                        </td>
                                                        <td style="text-align: right;">
                                                            <span t-esc="line['worked_hours']"/>
                                                        </td>
                                                        <td style="text-align: right;">
                                                            <span t-esc="line['extra_hours']"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-else="">
                                                    <tr>
                                                        <th style="text-align: center;">
                                                            <span t-esc="line['name']"/>
                                                        </th>
                                                        <th style="text-align: right;">
                                                            <span t-esc="line['worked_hours']"/>
                                                        </th>
                                                        <th style="text-align: right;">
                                                            <span t-esc="line['extra_hours']"/>
                                                        </th>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-1"/>
                            </div>
                            <!-- CONTENT Ends Here -->
                            <!-- Footer -->
                            <!--                            <div class="row"-->
                            <!--                                 style="position:absolute; font-weight: bolder; font-weight: 14px !important; width:100%; top:1200px; page-break-inside: avoid;">-->
                            <!--                                <div class="col-12">-->
                            <!--                                    <div class="text-center" style="border-top: 1px solid black;">-->
                            <!--                                        <br/>-->
                            <!--                                        <ul class="list-inline mb4">-->
                            <!--                                            <div t-field="o.env.company.report_footer"/>-->
                            <!--                                        </ul>-->
                            <!--                                    </div>-->
                            <!--                                </div>-->
                            <!--                            </div>-->
                            <!-- Footer Ends Here -->
                        </div>
                    </t>
                    <!-- Define CSS styles -->
                    <style>
                        .page {
                        font-family: Arial, sans-serif;
                        margin: 0px;
                        font-size:10px;
                        page-break-after: always
                        }
                        table {
                        width: 100%;
                        border-collapse: collapse;
                        }
                        th, td {
                        border: 1px solid #dddddd;
                        padding: 3px;
                        text-align: left;
                        }
                        th {
                        background-color: #f2f2f2;
                        }
                        img
                        {
                        height: 80px;
                        }
                    </style>
                </t>
            </t>
        </t>
    </template>

</odoo>