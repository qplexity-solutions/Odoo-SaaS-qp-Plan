<!-- views/attendance_request_wizard_views.xml -->
<odoo>
    <record id="view_attendance_request_wizard_form" model="ir.ui.view">
        <field name="name">attendance.request.wizard.form</field>
        <field name="model">attendance.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Request Attendance Change">
                <group>
                    <group>
                        <field name="attendance_id" force_save="1" invisible="1"/>
                        <field name="check_in"/>
                        <field name="check_out"/>
                    </group>
                    <group>
                        <field name="reason" string="Reason" required="1"/>
                    </group>
                </group>
                <footer>
                    <button string="Request Change" type="object" name="action_request_change" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_attendance_request_wizard" model="ir.actions.act_window">
        <field name="name">Request Attendance Change</field>
        <field name="res_model">attendance.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{"default_attendance_id": active_id}</field>
    </record>

    <record id="hr_attendance_request_tree_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.inherit.view.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='worked_hours']" position="after">
                <button name="%(action_open_attendance_request_wizard)d" string='Request Change' type='action'/>
            </xpath>
        </field>
    </record>
</odoo>
