<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sale_order_portal_content_custom_qp" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//th[@id='product_name_header']" position="before">
            <th t-if="sale_order.print_product_image" class="text-start" id="product_image_header">Image</th>
        </xpath>
        <xpath expr="//td[@id='product_name']" position="before">
            <td name="td_image" t-if="sale_order.print_product_image">
                <img t-if="line.image_128" t-att-src="image_data_uri(line.image_128)" style="max-width: 90%"/>
            </td>
        </xpath>
    </template>
</odoo>
