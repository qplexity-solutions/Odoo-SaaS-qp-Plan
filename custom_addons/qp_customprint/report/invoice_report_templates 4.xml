<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_custom_qp" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_description']" position="before">
            <th t-if="o.print_product_image" name="th_image" class="text-start"><span>Image</span></th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="before">
            <td name="td_image" t-if="o.print_product_image">
                <img t-if="line.image_128" t-att-src="image_data_uri(line.image_128)" style="max-width: 90%"/>
            </td>
        </xpath>
    </template>
</odoo>
