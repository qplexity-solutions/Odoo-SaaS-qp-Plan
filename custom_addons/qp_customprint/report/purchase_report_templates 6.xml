<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_custom_qp" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//th[@name='th_description']" position="before">
            <th t-if="o.print_product_image" name="th_image"><strong>Image</strong></th>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td name="td_image" t-if="o.print_product_image">
                <img t-if="line.image_128" t-att-src="image_data_uri(line.image_128)" style="max-width: 90%"/>
            </td>
        </xpath>
    </template>

    <template id="report_purchasequotation_document_custom_qp" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//th[@name='th_description']" position="before">
            <th t-if="o.print_product_image" name="th_image"><strong>Image</strong></th>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td name="td_image" t-if="o.print_product_image">
                <img t-if="order_line.image_128" t-att-src="image_data_uri(order_line.image_128)" style="max-width: 90%"/>
            </td>
        </xpath>
    </template>
</odoo>
