<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherit Purchase Order Form View-->
    <record id="purchase_order_form_inherit_qp" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.qp</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="before">
                <group>
                    <group>
                        <field name="print_product_image"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="before">
                <field name="image_128" widget='image' class="oe_avatar" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
