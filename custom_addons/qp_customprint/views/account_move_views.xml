<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherit Account Move Form View-->
    <record id="view_move_form_inherit_qp" model="ir.ui.view">
        <field name="name">account.move.form.inherit.qp</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']" position="before">
                <group>
                    <group>
                        <field name="print_product_image"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='line_ids']//field[@name='name']" position="before">
                <field name="image_128" widget='image' class="oe_avatar" column_invisible="True"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='name']" position="before">
                <field name="image_128" widget='image' class="oe_avatar" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
