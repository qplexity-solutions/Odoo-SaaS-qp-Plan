<odoo>
    <record id="view_res_config_settings_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']">
                <h2>Project / Tasks Settings</h2>
                <div class="row mt16 o_settings_container" id="deactivate_task_comp_rule">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="deactivate_task_comp_rule">
                        <div class="o_setting_left_pane">
                            <field name="deactivate_task_comp_rule"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="deactivate_task_comp_rule"/>
                            <div class="text-muted">
                                Employee Can See All Companies Project tasks ?
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
