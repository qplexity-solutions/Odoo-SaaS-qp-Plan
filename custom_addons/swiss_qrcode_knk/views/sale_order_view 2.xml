<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="order_form_add_qr">
        <field name="name">sale.order.form.qr.ref</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Swiss QR Code">
                    <group>
                        <field name="partner_bank_id" />
                        <field name="account_holder_id"/>
                        <field name="qrcode_status" invisible="not qrcode_status"/>
                        <field name="qr_reference" />
                        <field name="qrcode_qrbill" invisible="not qrcode_qrbill" widget="image" options="{'size': [150, 150]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>