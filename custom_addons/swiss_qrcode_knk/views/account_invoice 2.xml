<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="invoice_form_add_qr">
        <field name="name">account.move.form.qr.ref</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="Swiss QR Code" invisible="move_type != 'out_invoice'">
                    <group>
                        <field name="partner_bank_id" />
                        <field name="account_holder_id" />
                        <field name="qrcode_status" invisible="not qrcode_status" />
                        <field name="qr_reference" invisible="not qrcode_qrbill" />
                        <field name="qrcode_qrbill" widget="image" invisible="not qrcode_qrbill" options="{'size': [150, 150]}" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>