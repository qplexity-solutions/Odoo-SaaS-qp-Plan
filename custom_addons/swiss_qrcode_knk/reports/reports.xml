<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="paperformat_euro_a4_qr_invoice" model="report.paperformat">
            <field name="name">European A4 - QR Invoice</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">0</field>
        </record>
        <record id="print_qrinvoices" model="ir.actions.report">
            <field name="name">QR-bill</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">swiss_qrcode_knk.report_invoice_qrinvoice</field>
            <field name="report_file">swiss_qrcode_knk.report_invoice_qrinvoice</field>
            <field name="print_report_name">'QR-bill-%s' % object.name</field>
            <field name="paperformat_id" ref="swiss_qrcode_knk.paperformat_euro_a4_qr_invoice" />
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>