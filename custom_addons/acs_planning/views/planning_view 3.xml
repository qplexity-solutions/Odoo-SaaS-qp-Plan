<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="acs_planning_request_form" model="ir.ui.view">
        <field name="name">acs.planning.request.form</field>
        <field name="model">acs.planning.request</field>
        <field name="arch" type="xml">
            <form string="Shift Planning">
                <header>
                    <button name="action_submit" string="Submit" type="object" invisible="state!='draft'"/>
                    <button name="action_approve" string="Approve" type="object" invisible="state!='waiting'" groups="acs_planning.group_planning_officer"/>
                    <button name="action_done" string="Done" type="object" invisible="state!='approved'" groups="acs_planning.group_planning_officer"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['approved','waiting']" groups="acs_planning.group_planning_manager"/>
                    <button name="action_set_draft" string="Set to Draft" type="object" invisible="state!='cancel'" groups="acs_planning.group_planning_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,approved,done"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button  class="oe_stat_button" type="object"  name="action_view_planning" icon="fa-list"> 
                            <field name="planning_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Description" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="state!='draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="start_date" readonly="state!='draft'"/>
                            <field name="end_date" readonly="state!='draft'"/>
                            <field name="template_id" domain="[('work_location_id','=',work_location_id)]" readonly="state!='draft'"/>
                        </group>
                        <group>
                            <field name="approver_id" readonly="state!='draft'"/>
                            <field name="work_location_id" readonly="state!='draft'"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="state!='draft'"/>
                        </group>
                    </group>
                     <notebook>
                        <page name="planning_lines" string="Planning Lines">
                            <field name="planning_line_ids" nolabel="1" readonly="state!='draft'">
                                <tree string="Planning Lines" editable="bottom">
                                    <field name="employee_id" domain="[('is_shift_employee','=',True)]"/>
                                    <field name="schedule_id" options="{'no_create':True}" required="1"/>
                                    <field name="note"/>
                                    <field name="state" column_invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group string="Description">
                        <field name="note" nolabel="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record> 

    <record id="view_acs_planning_request_tree" model="ir.ui.view">
        <field name="name">acs.planning.request.tree</field>
        <field name="model">acs.planning.request</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Planning">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="work_location_id"/>
                <field name="planning_count"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_planning_template_search" model="ir.ui.view">
        <field name="name">acs.planning.request.search</field>
        <field name="model">acs.planning.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="work_location_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Waiting" name="waiting" domain="[('state','=','waiting')]"/>
                <filter string="Approved" name="approved" domain="[('state','=','approved')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
            </search>
        </field>
    </record>

    <record id="action_planning_template" model="ir.actions.act_window">
        <field name="name">Shift Planning Request</field>
        <field name="res_model">acs.planning.request</field>
        <field name="view_id" ref="view_acs_planning_request_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="acs_planning_request_template_form" model="ir.ui.view">
        <field name="name">acs.planning.request.template.form</field>
        <field name="model">acs.planning.request.template</field>
        <field name="arch" type="xml">
            <form string="Shift Planning">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Description" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="work_location_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                     <notebook>
                        <page name="planning_lines" string="Planning Lines">
                            <field name="planning_line_ids" nolabel="1">
                                <tree string="Planning Lines" editable="bottom">
                                    <field name="employee_id" domain="[('is_shift_employee','=',True)]"/>
                                    <field name="schedule_id" options="{'no_create':True}"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group string="Description">
                        <field name="note" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record> 

    <record id="view_acs_planning_request_template_tree" model="ir.ui.view">
        <field name="name">acs.planning.request.tree</field>
        <field name="model">acs.planning.request.template</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Planning">
                <field name="name"/>
                <field name="work_location_id"/>
            </tree>
        </field>
    </record>

    <record id="view_planning_request_template_search" model="ir.ui.view">
        <field name="name">acs.planning.request.template.search</field>
        <field name="model">acs.planning.request.template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="work_location_id"/>
            </search>
        </field>
    </record>

    <record id="action_planning_request_template" model="ir.actions.act_window">
        <field name="name">Shift Planning Template</field>
        <field name="res_model">acs.planning.request.template</field>
        <field name="view_id" ref="view_acs_planning_request_template_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_acs_planning_tree" model="ir.ui.view">
        <field name="name">acs.planning.tree</field>
        <field name="model">acs.planning</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Planning">
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="work_location_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_acs_planning_form" model="ir.ui.view">
        <field name="name">acs.planning.form</field>
        <field name="model">acs.planning</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Planning">
                <steet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="start_date" />
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="planning_template_id"/>
                            <field name="work_location_id" required="1"/>
                        </group>
                    </group>
                </steet>
            </form>
        </field>
    </record>

    <record id="view_shift_planning_search" model="ir.ui.view">
        <field name="name">acs.planning.search</field>
        <field name="model">acs.planning</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <field name="planning_template_id"/>
                <separator/>
                <group expand="0" string="Group By">
                      <filter string="Employee" name="employee" context="{'group_by': 'employee_id'}"/>
                      <filter string="Planning Template" name="groupby_template" context="{'group_by': 'planning_template_id'}"/>
                  </group>
            </search>
        </field>
    </record>

    <record id="view_shift_planning_calendar" model="ir.ui.view">
        <field name="name">acs.planning.calendar</field>
        <field name="model">acs.planning</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Planning" color="state" date_start="start_date" quick_create="0" date_stop="end_date" mode="week">
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="work_location_id"/>
                <field name="state" filters="1"/>
                <field name="employee_id" avatar_field="image_128"/>
            </calendar>
        </field>
    </record>

    <record id="action_acs_planning" model="ir.actions.act_window">
        <field name="name">Planning</field>
        <field name="res_model">acs.planning</field>
        <field name="view_id" ref="view_acs_planning_tree"/>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{'search_default_groupby_template':1}</field>
    </record>

    <record id="view_acs_timetable_tree" model="ir.ui.view">
        <field name="name">acs.time.table.tree</field>
        <field name="model">acs.time.table</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Timetable" editable="bottom">
                <field name="name"/>
                <field name="hour_from" widget="float_time"/>
                <field name="duration" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="action_acs_timetable" model="ir.actions.act_window">
        <field name="name">Timetable</field>
        <field name="res_model">acs.time.table</field>
        <field name="view_id" ref="view_acs_timetable_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>