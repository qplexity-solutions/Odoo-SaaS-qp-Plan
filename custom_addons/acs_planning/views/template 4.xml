<odoo>
 
    <template id="portal_my_home" name="Portal My Home: Planning entries" inherit_id="portal.portal_my_home" priority="30" customize_show="True">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="before">
            <t t-set="portal_client_category_enable" t-value="True"/>
        </xpath>
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/acs_planning/static/description/icon.svg'"/>
                <t t-set="title">Planning</t>
                <t t-set="url" t-value="'/my/plannings'"/>
                <t t-set="text">Review all your shift Planning</t>
                <t t-set="placeholder_count" t-value="'planning_count'"/>
            </t>
        </div>
    </template>

    <template id="my_plannings" name="My Plannings">
        <t t-call="portal.portal_layout">

            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Plannings</t>
            </t>
            <t t-if="not plannings">
                <p>There are currently no Plannings for your account.</p>
            </t>

            <div t-if="plannings" class="panel panel-default">
                <div class="table-responsive">
                    <table class="table table-hover bg-white status_table o_portal_my_doc_table">
                        <thead>
                            <tr class="active text-center">
                                <th>Employee Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Working Schedule</th>
                            </tr>
                        </thead>
                        <t t-foreach="plannings" t-as="planning">
                            <tr class="text-center">
                                <td>
                                    <t t-esc="planning.employee_id.name" />
                                </td>
                                <!-- <td>
                                    <a t-attf-href="/my/sanctions/#{sanction.id}?{{ keep_query() }}"><t t-esc="sanction.name" /></a>
                                </td> -->
                                <td>
                                    <span t-field="planning.start_date" />
                                </td>
                                <td>
                                    <span t-field="planning.end_date" />
                                </td>
                                <td>
                                    <span t-field="planning.schedule_id" />
                                </td>
                            </tr>
                        </t>

                    </table>
                </div>
            </div>
            <div t-if="pager" class="o_portal_pager text-center">
                <t t-call="portal.pager"/>
            </div>
        </t>
    </template>

</odoo>