<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_human_resources_planning">
            <field name="name">Planning</field>
            <field name="description">Planning</field>
            <field name="sequence">16</field>
        </record>
        <record id="group_planning_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_human_resources_planning"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_planning_officer" model="res.groups">
            <field name="name">Officer</field>
            <field name="category_id" ref="module_category_human_resources_planning"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('group_planning_user')) ]"/>
        </record>
        <record id="group_planning_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_human_resources_planning"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('group_planning_officer')) ]"/>
        </record>

        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('acs_planning.group_planning_officer'))]"/>
        </record>

        <record id="acs_planning_portal_rule" model="ir.rule">
            <field name="name">Portal Employee's Own Planning</field>
            <field name="model_id" ref="acs_planning.model_acs_planning_line"/>
            <field name="domain_force">[('employee_id.user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="acs_planning_user_rule" model="ir.rule">
            <field name="name">Employee's Own Planning</field>
            <field name="model_id" ref="acs_planning.model_acs_planning_line"/>
            <field name="domain_force">[('employee_id.user_id.id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('acs_planning.group_planning_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="acs_planning_manager_portal_rule" model="ir.rule">
            <field name="name">Employee's Manager Planning</field>
            <field name="model_id" ref="acs_planning.model_acs_planning_line"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('acs_planning.group_planning_manager')), (4, ref('acs_planning.group_planning_officer'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

    </data>
</odoo>