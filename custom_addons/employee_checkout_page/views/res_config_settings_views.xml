<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherited" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherited.tamo.employee.checkout.page</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_attendance']//h2" position="before">
                <h2>Check-Out Page Configuration</h2>
                <div class="row mt16 o_settings_container" name="employee_checkout_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="total_projects_to_display" class="o_form_label">Total Projetcs To Display</label>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." role="img" aria-label="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="text-muted">
                                Allow to display assigned projects in form of tags on checkout page.
                            </div>
                            <div class="mt16 row">
                                <label for="total_projects_to_display" string="Projetcs To Display" class="col-3 col-lg-3 o_light_label"/>
                                <field name="total_projects_to_display" class="col-lg-3 p-0" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
