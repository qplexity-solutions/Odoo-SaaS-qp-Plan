<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_faceid" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.faceid</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="auth_faceid" string="FACE ID" data-key="auth_faceid">

                    <div id="auth_faceid">
                        <h2>FaceID</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" title="Use face recognition for sign in?">

                                <div class="o_setting_left_pane">
                                    <field name="faceid_access"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Face recognition access</span>
                                    <div class="text-muted">
                                        Use face recognition for sign in?
                                    </div>
                                </div>

                                <div class="o_setting_left_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <field name="faceid_scale_recognition"/>
                                </div>
                                <div class="o_setting_right_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <span class="o_form_label">Scale of similafity face</span>
                                    <div class="text-muted">
                                        0-100, 55 - standart value more 55 most stricter match
                                    </div>
                                </div>

                                <div class="o_setting_left_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <field name="faceid_store"/>
                                </div>
                                <div class="o_setting_right_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <span class="o_form_label">Face control</span>
                                    <div class="text-muted">
                                        Store snapshot and descriptor of employee when he check in/out in DB for visual control, takes up a lot of server space
                                    </div>
                                </div>

                                <div class="o_setting_left_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <field name="faceid_photo_check"/>
                                </div>
                                <div class="o_setting_right_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <span class="o_form_label">Face security from photo</span>
                                    <div class="text-muted">
                                        Check in/out only real person, not photo
                                    </div>
                                </div>
                                <div class="o_setting_left_pane" attrs="{'invisible': ['|',('faceid_access', '=', False),('faceid_photo_check', '=', False)]}">
                                    <field name="faceid_scale_spoofing"/>
                                </div>
                                <div class="o_setting_right_pane" attrs="{'invisible': ['|',('faceid_access', '=', False),('faceid_photo_check', '=', False)]}">
                                    <span class="o_form_label">Scale of anti-spoofing</span>
                                    <div class="text-muted">
                                        0-100, 100 - 100% person, 0 - disable
                                    </div>
                                </div>

                                <div class="o_setting_left_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <field name="faceid_buffer_size_send"/>
                                </div>
                                <div class="o_setting_right_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <span class="o_form_label">Count photo faces buffer</span>
                                    <div class="text-muted">
                                        Count photo faces, befor sending to server verify
                                    </div>
                                </div>

                                <div class="o_setting_left_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <field name="faceid_hide_login"/>
                                </div>
                                <div class="o_setting_right_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <span class="o_form_label">Hide login password</span>
                                    <div class="text-muted">
                                        Hide password input and button on web/login form
                                    </div>
                                </div>

                                <div class="o_setting_left_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <field name="faceid_fast_mode"/>
                                </div>
                                <div class="o_setting_right_pane" attrs="{'invisible': [('faceid_access', '=', False)]}">
                                    <span class="o_form_label">Fast mode</span>
                                    <div class="text-muted">
                                        Work very fast, dont show mask face or show very fast
                                    </div>
                                </div>
                                <button name="%(auth_faceid.action_res_users_faceid)d" icon="fa-arrow-right" type="action" string="Manage Users" class="btn-link o_web_settings_access_rights"/>
                                <button name="%(auth_faceid.auth_faceid_action_logs)d" icon="fa-arrow-right" type="action" string="Manage Logs" class="btn-link o_web_settings_access_rights"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
